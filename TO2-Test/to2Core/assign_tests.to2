use * from core::testing

test sync fn test_assign_record_field() -> Unit = {
    let t = (a : 1234, b: 2345)
    let u = (first: t, second: 90)

    assert_int(1234, t.a)
    assert_int(2345, t.b)
    assert_int(1234, u.first.a)
    assert_int(90, u.second)
    
    t.a = 3456
    
    assert_int(3456, t.a)    
    assert_int(2345, t.b)
    assert_int(1234, u.first.a)
    assert_int(90, u.second)
    
    u.first.a = 4567

    assert_int(3456, t.a)    
    assert_int(2345, t.b)
    assert_int(4567, u.first.a)
    assert_int(90, u.second)
}
